<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h2>Edit moive</h2>
		<%= simple_form_for @movie do |f| %>
			<div>
				<%= f.input :title %>
			</div>
			<div>
				<%= f.input :description %>
			</div>
			<div>
				<%= f.input :length %>
			</div>
			<div>
				<%= f.input :director %>
			</div>
			<div>
				<%= f.input :rating %>
			</div>
			<div>
				<%= f.input :image, as: :file %>
			</div>
			<div>
				<%= f.button :submit, data: {disable_with: "Submitting..."} %>
				<%= link_to "Back", movies_path, class: "btn btn-default" %>
			</div>
		<% end %>
	</div>
</div>
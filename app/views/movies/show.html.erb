<div class="panel panel-default">
	<div class="panel-body">
		<div class="row">
			<div class="col-md-4">
				<%= image_tag @movie.image.url(:medium) %>

				<div class="star-rating" data-score= <%= @avg_review %> ></div>
        <em><%= "#{@reviews.length} reviews" %></em>
        
				<table class="table">
					<tbody>
						<tr>
							<td><strong>Title: </strong></td>
							<td><%= @movie.title %></td>
						</tr>
						<tr>
							<td><strong>Description: </strong></td>
							<td><%= @movie.description %></td>
						</tr>
						<tr>
							<td><strong>Movie Length: </strong></td>
							<td><%= @movie.length %></td>
						</tr>
						<tr>
							<td><strong>Director: </strong></td>
							<td><%= @movie.director %></td>
						</tr>
						<tr>
							<td><strong>Rating: </strong></td>
							<td><%= @movie.rating %></td>
						</tr>
					</tbody>
				</table>
				<%= link_to "Write a review", new_movie_review_path(@movie, @review) %>
			</div>
			<div class="col-md-7 col-md-offset-1">
				<h1><%= @movie.title %></h1>
				<p><%= @movie.description %></p>
				
				<% if @reviews.blank? %>
					<h3>No reviews just yet, would you like to add the first!</h3>
	          <%= link_to "Write Review", new_movie_review_path(@movie), class: "btn btn-danger" %>
				<% else %>
					<% @reviews.each do |review| %>
						<div class="star-rating" data-score= <%= review.rating %> ></div>
						<%= javascript_include_tag 'ratyrate.js', "data-turbolinks-track" => false %>
						<br>
						<p><%= review.comment %></p>
						<hr>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>

<div>
	<%= link_to "Edit", edit_movie_path(@movie) %> |
	<%= link_to "Remove", movie_path(@movie), method: :delete, data: {confirm: "Sure?"} %>
</div>

<script>
    $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });
</script>
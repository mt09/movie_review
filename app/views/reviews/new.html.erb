<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h2>Add new review</h2>
		<%= simple_form_for [@review.movie, @review] do |f| %>
			<div>
				<%= f.input :rating %>
				<%= f.input :comment %>
			</div>
			<div>
				<%= f.button :submit, data: {disable_with: "Submitting..."} %>
				<%= link_to "Back", movie_path(@movie), class: "btn btn-default" %>
			</div>
		<% end %>
	</div>
</div>